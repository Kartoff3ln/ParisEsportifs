{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/compte.css') }}">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

        <!-- {% if is_granted('ROLE_USER') %}
            You have the ROLE_USER role.
        {% else %}
            You do not have the ROLE_USER role.
        {% endif %} -->
    <div class ="container">
        <div class="compte-container">
            <div class="image">
                {% if app.user.getImgName %}
                    <img src="{{ asset('images/user/' ~ app.user.ImgName) }}" alt="Photo de profil" width="315" height="315">
                {% else %}
                    <img src="{{ asset('images/default_black.png') }}" alt="Photo de profil par défaut" width="315" height="315">
                {% endif %}
            </div>
            <div class="informations-container">
                <div class="text">
                    <a class="text-item">Pseudo :</a>
                    <a class="text-item">Nom :</a>
                    <a class="text-item">Prénom :</a>
                    <a class="text-item">Email :</a>
                    <a class="text-item">Téléphone :     </a>
                    <a class="bouton-item1" href="{{ path('app_user_edit', {'id': app.user.id}) }}"><buttton type="submit" >Modifier</button></a>
                </div>
                <div class="informations">
                    <a class="informations-item">{{ app.user.pseudo }}</a>
                    <a class="informations-item">{{ app.user.name }}</a>
                    <a class="informations-item">{{ app.user.firstname }}</a>
                    <a class="informations-item">{{ app.user.email }}</a>
                    <a class="informations-item">{{ app.user.phonenumber }}</a>
                    <a class="bouton-item2" href="{{ path('app_logout') }}"><buttton type="submit" >Se déconnecter</button></a>
                </div>
            </div>
        </div>
        <div class="paris-container">
            <div class="paris">
                
            </div>
        </div>
    </div>
{% endblock %}
